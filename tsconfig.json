{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": [
      "node",
      "@wdio/globals/types",
      "@wdio/mocha-framework"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    // wherever your specs & pageobjects live
    "@wdio/globals/types"
    // make sure TS picks up those definitions
  ]
}